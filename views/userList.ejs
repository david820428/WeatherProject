<!DOCTYPE html>
<html>
<title>Weather App</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="css/userlist.css" rel="stylesheet">

<body>

  <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
    <button class="w3-bar-item w3-button w3-large" onclick="w3_close()">Close &times;</button>
    <a href="/main" class="w3-bar-item w3-button">Main Page</a>
    <a href="/CityWeather" class="w3-bar-item w3-button">City Weather app</a>
    <a href="/userList" class="w3-bar-item w3-button">User List</a>
  </div>

  <div id="main">

    <div class="w3-teal">
      <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
      <div class="w3-container">
        <h1>User List</h1>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th scope="col">Select</th>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Password</th>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i=0; i<rs.length; i++) { %>
        <tr>
          <td><input type="radio" name="selected-row"></td>
          <td scope="row" data-label="Account"><%= rs[i].id %></td>
          <td data-label="Due Date"><%= rs[i].name %></td>
          <td data-label="Amount"><%= rs[i].password %></td>
          <td data-label="Period"><%= rs[i].email %></td>
        </tr>
        <% } %>
        <tr>
          <td></td>
          <td></td>
          <td><input type="text" id="new-row-column-1"></td>
          <td><input type="password" id="new-row-column-2"></td>
          <td><input type="email" id="new-row-column-3"></td>
        </tr>
      </tbody>
    </table>
    <button type="button" class="add-button">Add</button>
    <button type="button" class="add-button">Edit</button>
    <button type="button" class="add-button">Delete</button>

  </div>

  <script>
    function w3_open() {
      document.getElementById("main").style.marginLeft = "25%";
      document.getElementById("mySidebar").style.width = "25%";
      document.getElementById("mySidebar").style.display = "block";
      document.getElementById("openNav").style.display = 'none';
    }

    function w3_close() {
      document.getElementById("main").style.marginLeft = "0%";
      document.getElementById("mySidebar").style.display = "none";
      document.getElementById("openNav").style.display = "inline-block";
    }
    // Get a reference to the table body
    const tableBody = document.querySelector('tbody');

    // Add a click event listener to the table body
    tableBody.addEventListener('click', event => {
      // Check if the clicked element was a radio button
      const radioButton = event.target.closest('input[type="radio"]');
      if (radioButton) {
        // Get a reference to the selected row
        const selectedRow = radioButton.closest('tr');
        console.log(selectedRow);
        // Remove the "selected-row" class from all rows in the table
        const rows = tableBody.querySelectorAll('tr');
        rows.forEach(row => row.classList.remove('selected-row'));

        // Add the "selected-row" class to the selected row
        selectedRow.classList.add('selected-row');
      }
    });
  </script>

</body>

</html>
